---
const services = [
  {
    step: '1.',
    name: 'Design',
    description:
      'Our team creates a fully custom design to fit both your wishes and your budget.',
  },
  {
    step: '2.',
    name: 'Installation',
    description:
      'We purchase and install the full design. Everything is custom made for each home in order to ensure a perfect fit.',
  },
  {
    step: '3.',
    name: 'Tear Down',
    description:
      'Guaranteed removal by January 31st.',
  },
  {
    step: '4.',
    name: 'Storage',
    description:
      'All supplies are safely stored by H&M for the following season.',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 sm:gap-16">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">The Process</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          services.map((service) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-12 rounded-3xl px-6 py-8">
              <p class="text-sm">{service.step}</p>
              <div class="flex flex-col gap-4">
                <h3 class="text-xl font-medium">{service.name}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                  {service.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
